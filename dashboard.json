{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "10.0.0"
    },
    {
      "type": "panel",
      "id": "timeseries",
      "name": "Time series",
      "version": ""
    },
    {
      "type": "panel",
      "id": "stat",
      "name": "Stat",
      "version": ""
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "2.0.0"
    }
  ],
  "title": "Keycloak â€“ Core SLI",
  "uid": "keycloak-core-sli",
  "schemaVersion": 38,
  "version": 1,
  "editable": true,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timezone": "browser",
  "tags": [
    "keycloak",
    "slo",
    "sli"
  ],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "label": "Datasource",
        "current": {
          "text": "Prometheus",
          "value": "Prometheus"
        }
      },
      {
        "name": "namespace",
        "type": "query",
        "label": "Namespace",
        "datasource": "${DS_PROMETHEUS}",
        "query": "label_values(keycloak_http_server_requests_seconds_count, kube_namespace_name)",
        "includeAll": true,
        "multi": true,
        "current": {
          "text": "All",
          "value": "$__all"
        }
      },
      {
        "name": "realm",
        "type": "query",
        "label": "Realm",
        "datasource": "${DS_PROMETHEUS}",
        "query": "label_values(keycloak_user_events_total, realm)",
        "includeAll": true,
        "multi": true,
        "current": {
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "HTTP responses < 250 ms (5m, %)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "(\n  sum(rate(keycloak_http_server_requests_seconds_bucket{kube_namespace_name=~\"$namespace\", le=\"0.25\"}[5m]))\n/\n  sum(rate(keycloak_http_server_requests_seconds_count{kube_namespace_name=~\"$namespace\"}[5m]))\n) * 100"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 90 },
              { "color": "green", "value": 95 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "HTTP error rate 5xx (5m, %)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "(\n  sum(rate(keycloak_http_server_requests_seconds_count{kube_namespace_name=~\"$namespace\", outcome=\"SERVER_ERROR\"}[5m]))\n/\n  sum(rate(keycloak_http_server_requests_seconds_count{kube_namespace_name=~\"$namespace\"}[5m]))\n) * 100"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "DB connection pool utilisation (%)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * sum(keycloak_jdbc_connections_active{kube_namespace_name=~\"$namespace\"}) / sum(keycloak_jdbc_connections_max{kube_namespace_name=~\"$namespace\"})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 60 },
              { "color": "red", "value": 85 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Total requests per URI and outcome (rate/s, 5m)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 9, "w": 18, "x": 0, "y": 4 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (uri, outcome) (\n  rate(keycloak_http_server_requests_seconds_count{kube_namespace_name=~\"$namespace\"}[5m])\n)",
          "legendFormat": "{{uri}} ({{outcome}})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "decimals": 2
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "values": ["last"]
        },
        "tooltip": {
          "mode": "single",
          "sort": "none"
        }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Logins by Identity Provider (success, rate/s, 5m)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 9, "w": 18, "x": 0, "y": 13 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (idp) (\n  rate(keycloak_user_events_total{kube_namespace_name=~\"$namespace\", realm=~\"$realm\", event=\"login\", error=\"\"}[5m])\n)",
          "legendFormat": "{{idp}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "decimals": 3
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "values": ["last"]
        },
        "tooltip": {
          "mode": "single",
          "sort": "none"
        }
      }
    }
  ]
}
